require_once '/usr/share/php/libphp-phpmailer/class.phpmailer.php'; 
header('Content-type: text/html;charset=utf-8');
   function isValidEmail($email){
   	 return eregi("^[_a-z0-9-]+(\.[_a-z0-9-]+)*@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,3})$", $email);
   }
   if (isset($_POST['submit'])){
    $email = $_POST['Email'] ;
    $nome = $_POST['Nome'] ;
    $oggetto = $_POST['Oggetto'] ;
    $messaggio = $_POST['Messaggio'] ; 
    if (empty($nome)){
    	echo "<script type=\"text/javascript\">
		document.getElementById('Nome').placeholder = \"Il campo Nome è obbligatorio.\";
		document.getElementById('Nome').className=\"place_color\";
	      </script>";}
    else 
        {echo "<script type=\"text/javascript\">document.getElementById('Nome').value ='$nome' ;</script>";}
    if (empty($email)){
   	echo "<script type=\"text/javascript\">
		document.getElementById('Email').placeholder = \"Il campo Email è obbligatorio.\";
		document.getElementById('Email').className+=\" place_color\";
	     </script>";} 
    if (!empty($email) && !isValidEmail($email)){
	echo "<script type='text/javascript'>
		document.getElementById('Email').placeholder =  \"Inserire un'email valida\";
		document.getElementById('Email').className+=\" place_color\";
	      </script>";}
    if (empty($oggetto)){
	echo "<script type='text/javascript'>
		document.getElementById('Oggetto').placeholder = 'Il campo Oggetto è obbligatorio.';
	        document.getElementById('Oggetto').className+=\"place_color\";
              </script>";}
    else 
        {echo "<script type=\"text/javascript\">
		document.getElementById('Oggetto').value ='$oggetto' ;
	       </script>";}
    if (empty($messaggio)) {
	echo "<script type='text/javascript'>
		document.getElementById('Messaggio').placeholder = 'Il campo Messaggio è obbligatorio.';
		document.getElementById('Messaggio').className+=\"place_color\";
	      </script>";}
    else 
        {echo "<script type=\"text/javascript\">document.getElementById('Messaggio').value ='$messaggio' ;</script>";}
    if (!empty($nome) && !empty($email) && isValidEmail($email) && !empty($oggetto) && !empty($messaggio)) { 
		$mail = new PHPMailer();
		$mail->IsSMTP(); 
		// L'host remoto con cui spediremo, nel caso di gmail è smtp.gmail.com
		$mail->Host = "smtp.gmail.com";
		$mail->SMTPAuth = true;
		// Specifichiamo che vogliamo spedire tramite ssl, se non volete basta eliminae queste due righe
		$mail->SMTPSecure = 'ssl';
		$mail->Port = 465;
		// Inseriamo i dati della casella che utilizzeremo per spedire
		$mail->Username = "franco.berton93@gmail.com";
		$mail->Password = "oliveroliver";
		// Qui inseriamo l'indirizzo a cui recapitare le email spedite tramite il form
		$mail->AddAddress("franco.berton93@gmail.com");
		$mail->AddReplyTo("$email","$nome");
		// $mail->SMTPDebug = 1;
		$mail->FromName="$nome";
		$mail->From = "$email";
		$mail->Subject = "$oggetto";
		$mail->Body    = "$messaggio";
   		if (!$mail->Send())
  			{echo "<script type='text/javascript'>$(document).ready(function () {alert('Messaggio Non Inviato'.$mail->ErrorInfo);});</script>";}
                else 
			{echo "<script type='text/javascript'>
				document.getElementById('Nome').value ='';
				document.getElementById('Email').value ='';
				document.getElementById('Oggetto').value ='';
				document.getElementById('Messaggio').value ='';
				$(document).ready(function () {alert('Messaggio Inviato Correttamente');});</script>";}
		}
         }
?>
